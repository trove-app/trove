# Domain Configuration
DOMAIN=demo.trove.dev
EMAIL=admin@trove.dev

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# Trove Internal Database Configuration
TROVE_DB_URL=postgresql://postgres:postgres@trove-db:5432/trove
